<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/which_notifications"
	    android:layout_marginTop="25dp"
	    android:layout_gravity="center"
	    android:textSize="25dp" />
    
    <AutoCompleteTextView
        android:id="@+id/fav_airline"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="@string/fav_airline_tag"
        android:inputType="text" >

        <requestFocus />
    </AutoCompleteTextView>

    <EditText
        android:id="@+id/fav_flight_number"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/fav_number_tag"
        android:inputType="number" >
    </EditText>
    
    <Switch
        android:id="@+id/flight_state"
        android:text="@string/flight_state"
        style="@style/switch_land" />
      
      <Switch
        android:id="@+id/departure_terminal"
        android:text="@string/departure_terminal"
        style="@style/switch_land" />
      
      <Switch
        android:id="@+id/arrival_terminal"
        android:text="@string/arrival_terminal"
        style="@style/switch_land" />
    
      <Switch
        android:id="@+id/departure_gate"
        android:text="@string/departure_gate"
        style="@style/switch_land" />
      
      <Switch
        android:id="@+id/arrival_gate"
        android:text="@string/arrival_gate"
        style="@style/switch_land" />
      
      <Switch
        android:id="@+id/baggage_gate"
        android:text="@string/baggage_gate"
        style="@style/switch_land" />
      
      <Switch
        android:id="@+id/departure_time"
        android:text="@string/departure_time"
        style="@style/switch_land" />
      
      <Switch
        android:id="@+id/arrival_time"
        android:text="@string/arrival_time"
        style="@style/switch_land" />
      
      <Button
        android:id="@+id/fav_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="250dp"
        android:layout_marginBottom="20dp"
        android:text="@string/fav_button" 
        android:onClick="addFavouriteFlight"/>
      
	</LinearLayout>
    
</ScrollView>